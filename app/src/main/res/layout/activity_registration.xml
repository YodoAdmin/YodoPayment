<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.yodo.mobile.ui.RegistrationActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        style="@style/GeneralLayout"
        android:id="@+id/rlRegistration" >

        <Button
            style="@style/RegistrationGeneral"
            android:id="@+id/registerPipButton"
            android:background="@drawable/flat_selector_red"
            android:textColor="@android:color/white"
            android:text="@string/next"
            android:layout_alignParentBottom="true"
            android:onClick="registrationClick" />

        <ImageView
            style="@style/RegistrationGeneral"
            android:id="@+id/ivLogo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/desc"
            android:layout_alignParentTop="true"
            android:src="@drawable/yodopay_logo" />

        <LinearLayout
            android:id="@+id/registrationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivLogo"
            android:layout_above="@+id/registerPipButton"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/RegistrationGeneral"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/register_pip"/>

            <android.support.design.widget.TextInputLayout
                style="@style/RegistrationInfo"
                android:id="@+id/tilPip"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true" >

                <android.support.design.widget.TextInputEditText
                    style="@style/PIPInput"
                    android:id="@+id/etPip" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/RegistrationInfo"
                android:id="@+id/tilConfirmPip"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    style="@style/PIPInput"
                    android:id="@+id/etConfirmPip" />

            </android.support.design.widget.TextInputLayout>

            <!-- <CheckBox
                android:id="@+id/cbShowPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_pass"
                android:onClick="showPasswordClick" />
            -->

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>