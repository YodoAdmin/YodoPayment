<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/GeneralLayout"
	android:id="@+id/dialog_with_password"
	android:orientation="vertical">

	<android.support.design.widget.TextInputLayout
		android:id="@+id/tilPip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:errorEnabled="true"
		app:passwordToggleEnabled="true" >

		<android.support.design.widget.TextInputEditText
			style="@style/PIPInput"
			android:id="@+id/cetPIP" />

	</android.support.design.widget.TextInputLayout>

	<!--
	<CheckBox
	    android:id="@+id/showPassword"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/show_pass"/>
	-->

	<LinearLayout
		android:id="@+id/llTips"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:visibility="gone">

		<View style="@style/SeparatorView" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

			<TextView
				android:id="@+id/tvTips"
				android:layout_width="70dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="16sp"
				android:textStyle="bold"/>

			<SeekBar
				android:id="@+id/sbTips"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="10dip"
				android:maxHeight="20dip"
				android:max="20" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
