<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/layout_input_pip"
        android:contentDescription="@string/text.desc"
        android:src="@drawable/ic_yodo_logo" />

    <LinearLayout
        android:id="@+id/layout_input_pip"
        style="@style/InputPipLayoutTheme"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            style="@style/InputPipLayoutTheme"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/text.pip.register"/>

        <android.support.design.widget.TextInputLayout
            style="@style/InputPipLayoutTheme"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true" >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_pip"
                style="@style/PIPEditTextTheme"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/InputPipLayoutTheme"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_confirm_pip"
                style="@style/PIPEditTextTheme"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</RelativeLayout>
