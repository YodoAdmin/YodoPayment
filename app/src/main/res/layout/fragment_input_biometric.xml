<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llInputPip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivFace"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/text.desc"
        android:src="@drawable/ic_face"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/text.face.recognition"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_border_text"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/text.face.hint"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
