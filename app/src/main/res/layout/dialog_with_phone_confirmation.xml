<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/YodoUI.WrapperStyle">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/YodoUI.Text.T08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.phone.confirmation" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        style="@style/YodoUI.Text.T08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorLink"
        tools:ignore="SelectableText" />

    <co.yodo.mobile.ui.components.SpacedEditText
        android:id="@+id/setConfirmationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/tvPhoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorTransparent"
        android:cursorVisible="false"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:textSize="32sp"
        android:typeface="monospace"
        app:spacingProportion="1.1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setConfirmationCode"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTicker"
            style="@style/YodoUI.Text.T08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:enabled="false"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/android:textColorSecondary"
            tools:ignore="SelectableText"
            tools:text="Resend in 0:01" />

        <TextView
            android:id="@+id/tvResendCode"
            style="@style/YodoUI.Text.T08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:gravity="center"
            android:text="@string/text.phone.confirmation.resend"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorLink"
            android:visibility="gone"
            tools:text="Resend code" />

    </LinearLayout>

</RelativeLayout>