<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvUndo"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_border_delete"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_archive_white"
        android:drawableLeft="@mipmap/ic_archive_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/text.undo"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cvCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCoupon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/text.desc"
                android:src="@drawable/ic_loading"/>

            <TextView
                android:id="@+id/tvCoupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>