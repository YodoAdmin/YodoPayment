<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.yodo.mobile.ui.PipResetActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="co.yodo.mobile.ui.PipResetActivity">

        <LinearLayout
            android:id="@+id/updatePipButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/bResetPip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/flat_selector_red"
                android:textColor="@android:color/white"
                android:text="@string/reset_pip"
                android:onClick="resetPipClick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/flat_selector_grey"
                android:textColor="@android:color/white"
                android:text="@string/forgot_pip"
                android:onClick="forgotPipClick" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/updatePipButtons" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/current_pip"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <co.yodo.mobile.ui.components.ClearEditText
                    android:id="@+id/currentPipText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:hint="@string/pip_hint"/>

                <View style="@style/SeparatorView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/new_pip"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <co.yodo.mobile.ui.components.ClearEditText
                    android:id="@+id/newPipText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:hint="@string/new_pip_hint"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/confirm_pip"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <co.yodo.mobile.ui.components.ClearEditText
                    android:id="@+id/confirmPipText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:hint="@string/new_pip_hint"/>

                <CheckBox
                    android:id="@+id/showPasswordCheckBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_pass"
                    android:onClick="showPasswordClick" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</LinearLayout>