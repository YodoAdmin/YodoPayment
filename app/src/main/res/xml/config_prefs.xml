<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="SPCurrentLanguage"
        android:title="@string/config_pref_languages"
        android:summary="%s"
        android:entries="@array/languages_array"
        android:entryValues="@array/languages_array_values"
        android:defaultValue="en"/>

    <PreferenceCategory android:title="@string/config_pref_services">

        <ListPreference
            android:key="SPPromotionTime"
            android:title="@string/config_pref_advertising"
            android:summary="%s"
            android:entries="@array/promotion_array"
            android:entryValues="@array/promotion_array_values"
            android:defaultValue="300"/>

    </PreferenceCategory>

</PreferenceScreen>
