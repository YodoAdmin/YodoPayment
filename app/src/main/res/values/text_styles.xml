<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Phone registration -->
    <style name="YodoUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="YodoUI.Text.T08" tools:ignore="UnusedResources">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="YodoUI.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="YodoUI.TextInputEditText.PhoneField">
        <item name="android:hint">@string/text.phone.hint</item>
        <item name="android:inputType">phone</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="YodoUI.Text.BodyText" parent="YodoUI.Text.T08">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/body_padding_bottom</item>
    </style>

    <!-- PIP Input -->
    <style name="PIPEditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:digits">0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:drawableStart">@android:drawable/ic_lock_lock</item>
        <item name="android:drawableLeft">@android:drawable/ic_lock_lock</item>
        <item name="android:hint">@string/text.pip.hint</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">8</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- P2P Input -->
    <style name="P2PEditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:digits">0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
    </style>

    <!-- Header Info -->
    <style name="UserInfoTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Header Data -->
    <style name="UserDataTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Menu -->
    <style name="MenuTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!-- Menu -->
    <style name="LinkingCodeTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Linking Code Input -->
    <style name="LinkingCodeInputTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/text.linking.code.hint</item>
    </style>

    <!-- Linked Account View -->
    <style name="LinkedAccountTextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- Nickname Input -->
    <style name="NicknameInputTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/text.nickname</item>
    </style>

</resources>