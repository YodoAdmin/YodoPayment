<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">

    <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/createdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
            android:id="@+id/totalLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createdText"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/paidView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paid"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/paidText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/authNumberLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalLayout"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/authNumberView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receipt_auth"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
                android:id="@+id/authNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/userDataLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authNumberLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

        <LinearLayout
                android:id="@+id/cashTenderLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <TextView
                    android:id="@+id/cashTenderView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_tender"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                    android:id="@+id/cashTenderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/cashBackLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <TextView
                    android:id="@+id/cashBackView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_back"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                    android:id="@+id/cashBackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/yodoBalanceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <TextView
                    android:id="@+id/yodoBalanceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yodo_balance"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                    android:id="@+id/yodoBalanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userDataLayout"
            android:layout_margin="10dp"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:weightSum="2" >

        <ImageView
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/save_file"
                android:layout_weight="1"
                android:contentDescription="@string/desc" />

        <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trash_can"
                android:layout_weight="1"
                android:contentDescription="@string/desc" />
    </LinearLayout>

</RelativeLayout>