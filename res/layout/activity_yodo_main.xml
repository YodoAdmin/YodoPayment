<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- header -->
    <LinearLayout
            android:id="@+id/yodo_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >

        <!-- logo -->
        <ImageView
            android:id="@+id/yodoLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"
            android:onClick="navigationClick"
            android:contentDescription="@string/desc" />

        <!-- data -->
        <LinearLayout
                android:id="@+id/topData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

            <LinearLayout
                    android:id="@+id/topDataTextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account"
                        android:id="@+id/accountNumberTextLabel" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:id="@+id/dateTextLabel" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/balance"
                        android:id="@+id/balanceTextLabel" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/version"
                        android:id="@+id/versionTextLabel" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/top_data_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/accountNumberText" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateText" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/balanceText" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/versionText"
                        android:text="@string/actual_version" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- Settings Button -->
        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu"
            android:onClick="settingsClick"
            android:contentDescription="@string/desc" />
    </LinearLayout>
    <!-- end header -->

    <!-- main payments button -->
    <LinearLayout
            android:id="@+id/yodo_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:weightSum="3"
            android:layout_alignParentBottom="true" >

        <ImageView
                android:id="@+id/paymentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/golden_coins"
                android:onClick="paymentClick"
                android:contentDescription="@string/desc" />

        <ImageView
                android:id="@+id/couponButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/coupon_icon"
                android:onClick="couponClick"
                android:contentDescription="@string/desc" />

        <ImageView
                android:id="@+id/networkButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sns_icon"
                android:onClick="networkClick"
                android:contentDescription="@string/desc" />
    </LinearLayout>
    <!-- end main payments button -->

    <!-- start ads view -->
	<RelativeLayout
	    android:id="@+id/ads_view"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center"
	    android:layout_below="@id/yodo_header"
	    android:layout_above="@id/yodo_buttons"
	    android:visibility="visible" 
	    android:orientation="vertical" >
        
	    <ImageView
	        	android:id="@+id/advertisingImage"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="10dp"
	            android:contentDescription="@string/desc" />
	   
	</RelativeLayout>
	<!-- end ads view -->
    
    <!-- start menu view -->
	<ScrollView
	     android:id="@+id/navigation_view" 
	     android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@id/yodo_header"
         android:layout_above="@id/yodo_buttons"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         android:visibility="gone" >
	        
		<include layout="@layout/yodo_actions"/>

	</ScrollView>
	<!-- end menu view -->
</RelativeLayout>